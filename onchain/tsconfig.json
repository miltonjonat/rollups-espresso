{
  "compilerOptions": {
    "declaration": true,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"    
  },
  "include": ["**/*.ts", "test/**/*.json"],
  "exclude": ["dist", "node_modules"]  
}
